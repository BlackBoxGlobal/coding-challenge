<%= nested_form_for @actor do |form| %>
  <% if actor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>
      <ul>
        <% actor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>
  <div class="field">
    <%= form.label :imdb_url %>
    <%= form.text_field :imdb_url %>
  </div>
  <div class="field">
  </div>
  <fieldset>
    <legend>Characters:</legend>
    <%= form.fields_for :characters do |character_form| %>
      <div class="field flex">
        <%= character_form.text_field :first_name, placeholder: 'First name' %>
        <%= character_form.text_field :last_name, placeholder: 'Last name' %>
        <%= character_form.link_to_remove "Remove" %>
      </div>
    <% end %>
    <%= form.link_to_add "Add Characters", :characters %>
  </fieldset>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
